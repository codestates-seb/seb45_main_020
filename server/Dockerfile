ARG ENV
ARG S3_ACCESSKEY
ARG S3_SECRETKEY
ARG JWT_SECRET_KEY
ARG RDS_PASSWORD
ARG G_CLIENT_ID
ARG G_CLIENT_SECRET
ARG GIT_CLIENT_ID
ARG GIT_CLIENT_SECRET
ARG K_CLIENT_ID
ARG K_CLIENT_SECRET
ARG TOURAPI_SERVICEKEY
FROM openjdk:11
ENV ENV=${ENV}
ENV S3_ACCESSKEY=${S3_ACCESSKEY}
ENV S3_SECRETKEY=${S3_SECRETKEY}
ENV JWT_SECRET_KEY=${JWT_SECRET_KEY}
ENV RDS_PASSWORD=${RDS_PASSWORD}
ENV G_CLIENT_ID=${G_CLIENT_ID}
ENV G_CLIENT_SECRET=${G_CLIENT_SECRET}
ENV GIT_CLIENT_ID=${GIT_CLIENT_ID}
ENV GIT_CLIENT_SECRET=${GIT_CLIENT_SECRET}
ENV K_CLIENT_ID=${K_CLIENT_ID}
ENV K_CLIENT_SECRET=${K_CLIENT_SECRET}
ENV TOURAPI_SERVICEKEY=${TOURAPI_SERVICEKEY}
ARG JAR_FILE=build/libs/*-SNAPSHOT.jar
COPY ${JAR_FILE} app.jar
ENTRYPOINT ["java","-jar","/app.jar"]